---
import ArchivePanel from "@components/ArchivePanel.svelte";
import I18nKey from "@i18n/i18nKey";
import { DEFAULT_LOCALE, i18n } from "@i18n/translation";
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { getSortedPostsListForLang } from "../utils/content-utils";

const sortedPostsList = await getSortedPostsListForLang(DEFAULT_LOCALE);

// Detect current language (this will be improved with proper SSR support)
const currentLang = DEFAULT_LOCALE;
---

<MainGridLayout title={i18n(I18nKey.archive, currentLang)} lang={currentLang}>
    <ArchivePanel sortedPosts={sortedPostsList} lang={currentLang} client:only="svelte"></ArchivePanel>
</MainGridLayout>

