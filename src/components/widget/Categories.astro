---
import I18nKey from "../../i18n/i18nKey";
import { i18n } from "../../i18n/translation";
import { getCategoryList } from "../../utils/content-utils";
import CategoryTreeItem from "./CategoryTreeItem.astro";
import WidgetLayout from "./WidgetLayout.astro";

interface Props {
	class?: string;
	style?: string;
	lang?: string;
}

const { class: className, style, lang } = Astro.props;

const categories = await getCategoryList(lang);
const title = i18n(I18nKey.categories, lang);

const COLLAPSED_HEIGHT = "15rem";
const COLLAPSE_THRESHOLD = 5;

const isCollapsed = categories.length >= COLLAPSE_THRESHOLD;
---

<WidgetLayout name={title} id="categories" isCollapsed={isCollapsed} collapsedHeight={COLLAPSED_HEIGHT}
                class={className} style={style} lang={lang}
>
    {categories.map((c) =>
        <CategoryTreeItem category={c} />
    )}
</WidgetLayout>
